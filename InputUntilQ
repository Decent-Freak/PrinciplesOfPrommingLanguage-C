#include<stdio.h>
int main(){
int i=0;
int n=0;
int avg;
int user_input;
char s;
int p=1;
	while (1)
	{
		printf("Enter the input\n");
		scanf("%d",&user_input);
		scanf("%c",&s);
		if (s!='q') {
		 n=n+user_input;
			printf("Enter to continue or q to quit");
			i++;
		}
		else {
			printf("You have chosen to quit");
			break;
		}		
			avg=n/i;
			p=p*user_input;
			printf("\n total time the user entered the value is : %d ",i );
			printf("\n Average : %d",avg );
			printf("\n product of all the number : %d",p );
	}
}
